  @model IEnumerable<CodeFirstCrud.Models.Student>
@{
    ViewData["Title"] = "Index";
}

<table table-stripped>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Name);
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Age);
            </th>
            <th>

                @Html.DisplayNameFor(model=>model.Collegename);
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Address);
            </th>
            <th>
                <a asp-action="AddorEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i>  Employee</a>
            </th>
      </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <tr>
               <td>
                   @Html.DisplayFor(Modelitem=> item.Name);
               </td>
               <td>
                   @Html.DisplayFor(ModelItem=>item.Age)
               </td>
               <td>
                   @Html.DisplayFor(ModelItem=>item.Collegename);
               </td>
               <td>
                   @Html.DisplayFor(ModelItem=>item.Address);
               </td>
               <td>
                   <a asp-controller="Students" asp-action="AddorEdit" asp-route-id="@item.Id">Edit</a>
                   <a asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id">delete</a>
                
                   <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('Are u sure want to delete this record')"><i class=" far fa-lg-trash"></i></a>
               </td>

           </tr>
                
        }
       
    </tbody>




</table>